[app:main]
use = egg:aap

pyramid.includes = pyramid_beaker

session.type = file
session.data_dir = /tmp/aap/data/sessions/data
session.lock_dir = /tmp/aap/data/sessions/lock
#session.type = memory
# HaProxy needs SRV
session.key = SRV
session.secret = 2f597ecc390c4766b2da0d841dd4ab9c 
session.cookie_on_exception = true
session.timeout = 900
session.cookie_expires = true

boto_cfg = ${buildout:directory}/boto.cfg
client_secrets.json = ${buildout:directory}/client_secrets.json
data_js=${vars:stagging}/data.js
authorized_users = ${buildout:directory}/users.txt
bucket=mf-aap
wsgi_path=/${vars:instanceid}/wsgi
duration = 900

[server:main]
use = egg:pyramid#wsgiref
host = 0.0.0.0
port = 8080

[loggers]
keys = root

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s][%(threadName)s] %(message)s
