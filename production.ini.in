[app:main]
use = egg:aap

pyramid.includes = pyramid_beaker

session.type = file
session.data_dir = ${buildout:directory}/data/sessions/data
session.lock_dir = ${buildout:directory}/data/sessions/lock
session.key = mykey
session.secret = mysecret
session.cookie_on_exception = true

boto_cfg = ${buildout:directory}/boto.cfg
client_secrets.json = ${buildout:directory}/client_secrets.json
data_js=${vars:stagging}/data.js
bucket=mf-aap
wsgi_path=/${vars:instanceid}/wsgi


sqlalchemy.url = sqlite:///${buildout:directory}/data/aap.sqlite

[server:main]
use = egg:pyramid#wsgiref
host = 0.0.0.0
port = 8080

[loggers]
keys = root,sqlalchemy

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console

[logger_sqlalchemy]
level = WARN
handlers =
qualname = sqlalchemy.engine
# "level = INFO" logs SQL queries.
# "level = DEBUG" logs SQL queries and results.
# "level = WARN" logs neither.  (Recommended for production systems.)

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s][%(threadName)s] %(message)s
